{
  // 单位类型：飞行单位
  "type": "flying",
  // 单位名称：升级版星辉
  "name": "flarex",
  // 单位描述：拥有防御力场的升级版耀光，可对敌人和发电机进行连射攻击
  "description": "An upgraded flare unit with defensive force field. Fires burst shots at enemies and generators.",
  //轮廓颜色
  "outlineColor": "4B4759",
  
  // ----- 基础属性 -----
  "health": 70,              // 生命值
  "armor": 0,                // 护甲值（减伤）
  "hitSize": 9,              // 碰撞体积大小
  
  // ----- 移动属性 -----
  "speed": 3.4,              // 移动速度
  "rotateSpeed": 5,          // 旋转速度
  "accel": 0.08,             // 加速度
  "drag": 0.04,              // 空气阻力/减速系数
  
  // ----- 行为属性 -----
  "flying": true,            // 是否为飞行单位
  "targetAir": true,         // 能否攻击空中目标
  "targetGround": true,      // 能否攻击地面目标
  "circleTarget": true,      // 是否以环绕方式接近目标
  "omniMovement": false,     // 是否为全方位移动（false表示需要转向才能移动）
  "rotateShooting": true,    // 是否在射击时旋转朝向目标
  
  // ----- 容量与外观 -----
  "itemCapacity": 10,        // 物品携带容量
  "engineOffset": 5.75,      // 引擎火焰偏移量
  "engineSize": 2,           // 引擎火焰大小
  
  // ----- 特殊能力：力场防御（添加了特效）-----
  "abilities": [
    {
      "type": "ForceFieldAbility",  // 能力类型：力场防御
      "radius": 40,                 // 力场半径（像素，约5格）
      "regen": 1.5,                 // 力场每秒恢复速度
      "max": 200,                   // 力场最大生命值
      "cooldown": 300,              // 力场被击破后的冷却时间（帧数）
    }
  ],
  
  // ----- 武器系统（添加了蓝色特效）-----
  "weapons": [
    {
      // 基础武器属性
      "name": "flarex-weapon",      // 武器贴图名称
      "x": 0,                       // 武器X轴偏移（水平）
      "y": 1,                       // 武器Y轴偏移（垂直）
      "mirror": false,              // 是否镜像对称（false表示单侧武器）
      "reload": 80,                  // 装填时间（帧数）
      "rotate": true,                // 武器是否能独立旋转
      "rotateSpeed": 5,              // 武器旋转速度
      
      // 射击条件
      "shootCone": 10,               // 射击锥角（度，目标在此范围内才能射击）
      "minShootVelocity": 2,          // 最小开火速度（低于此速度无法开火）
      
      // ----- 特效配置（全部改为淡蓝色系）-----
      "shootEffect": {                // 开火特效（自定义为淡蓝火花）
        "type": "ParticleEffect",
        "line": true,
        "particles": 5,
        "sizeFrom": 2.0,
        "sizeTo": 0.0,
        "length": 10.0,
        "baseLength": 5.0,
        "colorFrom": "B0B0FF",       // 起始颜色（淡蓝紫）
        "colorTo": "F0F0FF",          // 结束颜色（近乎白色，中心变浅）
        "cone": 20.0,
        "lenFrom": 3.0,
        "lenTo": 0.0
      },
      "smokeEffect": {                // 开火烟雾特效（淡蓝烟雾）
        "type": "ParticleEffect",
        "particles": 3,
        "sizeFrom": 3.0,
        "sizeTo": 5.0,
        "colorFrom": "A0A0FF",        // 起始颜色（淡蓝紫）
        "colorTo": "C0C0FF",          // 结束颜色（更淡）
        "cone": 360.0,
        "length": 5.0,
        "lifetime": 20
      },
      
      // ----- 射击模式：交替射击 -----
      "shoot": {
        "type": "ShootAlternate",     // 射击类型：交替射击（左右交替或连发）
        "shots": 4,                   // 每次射击发射4发子弹
        "shotDelay": 3,               // 每发子弹间隔3帧
        "spread": 5                   // 子弹扩散角度（度，增加散布范围）
      },
      
      // ----- 子弹配置（添加了淡蓝特效）-----
      "bullet": {
        "type": "BasicBulletType",    // 子弹类型：基础子弹
        "damage": 20,                 // 子弹伤害
        "speed": 3,                   // 子弹飞行速度
        "lifetime": 45,               // 子弹存在时间（帧数）
        "width": 7,                   // 子弹碰撞箱宽度
        "height": 9,                  // 子弹碰撞箱高度
        "ammoMultiplier": 2,           // 弹药倍率（每个弹药单位可发射的子弹数）
        
        // --- 子弹外观特效 ---
        "backColor": "A0A0FF",         // 子弹后部颜色（淡蓝紫）
        "frontColor": "E0E0FF",        // 子弹前部颜色（更浅，形成渐变）
        "mixColorFrom": "C0C0FF",      // 混合起始颜色
        "mixColorTo": "FFFFFF",        // 混合结束颜色（白色，中心变浅）
        "trailEffect": {               // 子弹尾迹特效
          "type": "ParticleEffect",
          "particles": 1,
          "sizeFrom": 1.5,
          "sizeTo": 0.0,
          "colorFrom": "A0A0FF",
          "colorTo": "E0E0FF",
          "cone": 360.0,
          "length": 0.0,
          "lifetime": 5
        },
        "hitEffect": {                 // 子弹命中特效
          "type": "ParticleEffect",
          "line": true,
          "particles": 6,
          "sizeFrom": 3.0,
          "sizeTo": 1.0,
          "colorFrom": "B0B0FF",
          "colorTo": "F0F0FF",
          "cone": 360.0,
          "length": 8.0
        },
        "despawnEffect": {             // 子弹消失特效（未命中时）
          "type": "ParticleEffect",
          "particles": 4,
          "sizeFrom": 2.0,
          "sizeTo": 3.0,
          "colorFrom": "A0A0FF",
          "colorTo": "D0D0FF",
          "cone": 360.0,
          "length": 3.0
        }
      }
    }
  ],
  
  // ----- 研究配置 -----
  "researchCostMultiplier": 0.5        // 研究成本倍率（0.5表示所需研究材料减半）
}