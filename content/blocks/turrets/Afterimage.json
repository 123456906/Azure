{
  "type": "ItemTurret",           // 实体类型：物品炮塔
  "name": "Afterimage",           // 名称：残影
  "description": "发射爆炸性能量弹的炮塔", // 描述
  "size": 3,                      // 占用格子大小：3x3
  "health": 500,                  // 生命值
  "ammoPerShot": 1,               // 每次射击消耗弹药数
  "range": 350,                   // 射程（单位：格）
  "reload": 45,                   // 装填时间（帧数）
  "inaccuracy": 5,                // 射击散布角度（度）
  "ammoUseEffect": "casing2",     // 弹药消耗视觉效果（抛壳效果）
  "rotateSpeed": 4,               // 炮塔旋转速度（度/帧）
  "maxAmmo": 30,                  // 最大弹药容量
  "recoilTime": 3,                // 后坐力持续时间（帧）
  "recoil": 2,                    // 后坐力强度（像素位移）
  "shootSound": "shootBig",       // 射击音效
  "targetAir": true,              // 可攻击空中单位
  "targetGround": true,           // 可攻击地面单位
  "coolantMultiplier": 3,         // 冷却液效率倍数
  "heatColor": "FF0000",          // 过热时高亮颜色（红色）
  "drawer": {
    // 使用炮塔绘制器
    "type": "DrawTurret",
    // 部件列表
     "parts": [
      {
        // 部件类型为区域部件
        "type": "RegionPart",
        // 不进行镜像翻转
        "mirror": false,
        // 部件中心X坐标偏移
        "x": 0,
        // 部件中心Y坐标偏移
        "y": 0,
        // 使用名称后缀"-顶"来寻找对应纹理
        "suffix": "-1",
        // 绘制层级
        "layer": 51,
        // 射击时X轴移动偏移
        "moveX": 0.5,
        // 射击时Y轴移动偏移（向
        "moveY": -0.5
      },
      {
        // 部件类型为区域部件
        "type": "RegionPart",
        // 不进行镜像翻转
        "mirror": false,
        // 部件中心X坐标偏移
        "x": 0,
        // 部件中心Y坐标偏移
        "y": 0,
        // 使用名称后缀"-顶"来寻找对应纹理
        "suffix": "-2",
        // 绘制层级
        "layer": 51,
        // 射击时X轴移动偏移
        "moveX": 0.7,
        // 射击时Y轴移动偏移（向
        "moveY": 0
      }
    ]
  }
  // 消耗品配置
  "consumes": {
    "coolant": {                  // 冷却液消耗
      "amount": 0.25,             // 每次射击消耗量
      "optional": true            // 可选消耗（可不使用冷却液）
    }
  },

  // 射击配置
  "shoot": {
    "shots": 2,                   // 每次射击发射的弹幕数量
    "shotDelay": 3                // 弹幕间发射延迟（帧）
  },

  // 弹药类型配置（键名为使用的弹药物品）
  "ammoTypes": {
    "msilicon": {                 // 使用钛作为弹药
      "type": "ArtilleryBulletType", // 弹药类型：火炮子弹
      "reloadMultiplier": 1,      // 装填时间乘数
      "speed": 7,                 // 子弹速度（格/帧）
      "damage": 50,               // 直接命中伤害
      "knockback": 1,             // 击退强度
      "lifetime": 80,             // 存活时间（帧）
      "width": 12, "height": 28,  // 碰撞箱尺寸
      "ammoMultiplier": 3,        // 单发弹药消耗乘数（实际消耗=ammoPerShot×此值）
      "splashDamageRadius": 48,   // 爆炸半径（格）
      "splashDamage": 120,        // 爆炸伤害
      
      // 视觉效果配置
      "shootEffect": "shootBigColor", // 发射特效
      "frontColor": "A0C8FF",     // 子弹前端颜色（浅蓝色）
      "backColor": "8BA8E6",      // 子弹尾部颜色（稍深蓝）
      "hitEffect": "hitLaserColor", // 命中特效
      "trailEffect": "colorTrail", // 拖尾特效
      "trailColor": "A0C8FF",     // 拖尾颜色
      "lightColor": "A0C8FF",     // 发光颜色
      "lightRadius": 77,          // 光照半径
      "lightOpacity": 0.7,        // 光照透明度

      // 子弹消失时的复合特效
      "despawnEffect": {
        "type": "MultiEffect",    // 多效果组合
        "effects": [
          "coreExplosion",        // 核心爆炸效果
          {                       // 包裹效果：带有颜色的爆炸
            "type": "WrapEffect",
            "effect": "scatheExplosion",
            "color": "A0C8FF"
          },
          {                       // 包裹效果：动态尖刺
            "type": "WrapEffect",
            "effect": "dynamicSpikes",
            "color": "A0C8FF"
          },
          {                       // 包裹效果：闪电
            "type": "WrapEffect",
            "effect": "lightning",
            "color": "A0C8FF"
          }
        ]
      },

      // 子弹分裂配置（击中后产生的碎片）
      "fragBullets": 10,           // 碎片数量
      "fragRandomSpread": 360,    // 碎片散布角度（360度全向）
      "fragBullet": {             // 碎片子弹配置
        "type": "ArtilleryBulletType",
        "collidesGround": true,   // 可碰撞地面
        "width": 6, "height": 11, // 碎片尺寸
        "spin": 8,                // 旋转速度
        "splashDamageRadius": 100, // 碎片爆炸半径
        "splashDamage": 150,       // 碎片爆炸伤害
        "speed": 2.5,             // 碎片速度
        "lifetime": 35,           // 碎片存活时间
        "frontColor": "A0C8FF",
        "backColor": "8BA8E6",
        "despawnEffect": {        // 碎片消失特效
          "type": "MultiEffect",
          "effects": [
            {
              "type": "WrapEffect",
              "effect": "sparkExplosion",
              "color": "A0C8FF"
            },
            {
              "type": "WrapEffect",
              "effect": "pointShockwave",
              "color": "A0C8FF"
            }
          ]
        },
        "hitEffect": "hitLaserColor",
        "hitColor": "A0C8FF"
      }
    }
  },

  // 建造所需材料
  "requirements": [
    {"item": "copper", "amount": 50},   // 铜 × 50
    {"item": "lead", "amount": 30},     // 铅 × 30
    {"item": "titanium", "amount": 20}  // 钛 × 20
  ],

  "category": "turret",           // 建造分类：炮塔
  "alwaysUnlocked": true,         // 始终解锁（无需研究）
  
  // 研究树配置（显示在研究树中的位置）
  "research": {
    "parent": "glow"              // 前置研究项目："glow"（辉光炮塔）
  }
}