{
  // 实体类型：物品炮塔（使用物品作为弹药）
  "type": "ItemTurret",
  // 炮塔名称：阵风（英文）
  "name": "gust",
  // 炮塔描述：七重风轮，协同转动，射出旋风能量弹
  "description": "Seven wind wheels rotate in unison, firing cyclone energy projectiles.",
  // 详细描述：显示部件动画效果说明
  "details": "7个部件在开炮时产生轻微转动和位移，形成独特的视觉韵律。",
  // 炮塔尺寸
  "size": 5,
  // 生命值：880
  "health": 880,
  // 每次射击消耗弹药数：1发
  "ammoPerShot": 1,
  // 炮塔攻击范围：320单位 = 40格
  "range": 320,
  // 装填时间：45帧（0.75秒）
  "reload": 45,
  // 射击散布角度：5度
  "inaccuracy": 5,
  // 弹药消耗特效：中型弹壳抛射
  "ammoUseEffect": "casing2",
  // 旋转速度：6度/帧（快速转向）
  "rotateSpeed": 6,
  // 最大弹药容量：30发
  "maxAmmo": 30,
  // 后坐力恢复时间：4帧
  "recoilTime": 4,
  // 后坐力强度：1.5像素位移
  "recoil": 1.5,
  // 射击音效：大型射击音效
  "shootSound": "shootBig",
  // 可攻击空中单位
  "targetAir": true,
  // 可攻击地面单位
  "targetGround": true,
  // 冷却剂效率倍数：2.5倍
  "coolantMultiplier": 2.5,
  // 过热颜色：风青色
  "heatColor": "7FEFBD",
  
  "drawer": {
    // 使用炮塔绘制器
  "type": "DrawTurret",
  // 部件配置（7个部件，开炮时产生轻微动画）
  "parts": [
    {
      // 部件1：基座（静态底座）
      "type": "RegionPart",
      "name": "basee",
      "mirror": false,
      "x": 0,
      "y": 0,
      "suffix": "-basee",
      "layer": 50,
      // 基座在开炮时有轻微下沉效果
      "moveY": 0.5,
      "moveX": 0,
      // 轻微旋转（0.5度）
      "moveRot": 0.5
    },
    {
      // 部件2：内环1（顺时针轻微旋转）
      "type": "RegionPart",
      "name": "innerRing1",
      "mirror": false,
      "x": 0,
      "y": 0,
      "suffix": "-inner-1",
      "layer": 51,
      // 开炮时顺时针旋转1.5度
      "moveRot": 1.5,
      // 轻微向外移动
      "moveX": 0.3,
      "moveY": 0.2
    },
    {
      // 部件3：内环2（逆时针轻微旋转）
      "type": "RegionPart",
      "name": "innerRing2",
      "mirror": false,
      "x": 0,
      "y": 0,
      "suffix": "-inner-2",
      "layer": 51,
      // 开炮时逆时针旋转1.2度
      "moveRot": -1.2,
      // 轻微向内移动
      "moveX": -0.2,
      "moveY": -0.1
    },
    {
      // 部件4：外环1（顺时针旋转）
      "type": "RegionPart",
      "name": "outerRing1",
      "mirror": false,
      "x": 0,
      "y": 0,
      "suffix": "-outer-1",
      "layer": 52,
      // 开炮时顺时针旋转0.8度
      "moveRot": 0.8,
      // 轻微对角线移动
      "moveX": 0.4,
      "moveY": 0.3
    },
    {
      // 部件5：外环2（逆时针旋转）
      "type": "RegionPart",
      "name": "outerRing2",
      "mirror": false,
      "x": 0,
      "y": 0,
      "suffix": "-outer-2",
      "layer": 52,
      // 开炮时逆时针旋转1度
      "moveRot": -1.0,
      // 轻微对角线移动
      "moveX": -0.3,
      "moveY": -0.2
    },
    {
      // 部件6：风叶组1（垂直移动部件）
      "type": "RegionPart",
      "name": "bladeGroup1",
      "mirror": false,
      "x": 0,
      "y": 0,
      "suffix": "-blades-1",
      "layer": 53,
      // 开炮时轻微上升
      "moveY": -0.6,
      // 轻微旋转
      "moveRot": 0.6
    },
    {
      // 部件7：风叶组2（水平移动部件）
      "type": "RegionPart",
      "name": "bladeGroup2",
      "mirror": false,
      "x": 0,
      "y": 0,
      "suffix": "-blades-2",
      "layer": 53,
      // 开炮时轻微左右摆动
      "moveX": 0.5,
      "moveY": -0.2,
      // 轻微旋转
      "moveRot": -0.7
    }
  ],
  }
  
  // 消耗品配置
  "consumes": {
    // 冷却剂配置
    "coolant": {
      // 每次使用0.2单位冷却剂
      "amount": 0.2,
      // 冷却剂为可选消耗品
      "optional": true
    }
  },
  
  // 射击配置（单发快速射击）
  "shoot": {
    "shots": 1,
    "shotDelay": 0
  },
  
  // 弹药类型配置
  "ammoTypes": {
    // 使用硅作为弹药
    "silicon": {
      "type": "BasicBulletType",
      "reloadMultiplier": 1,
      "speed": 7.5,
      "damage": 32,
      "knockback": 1.2,
      "lifetime": 55,
      "width": 10,
      "height": 18,
      "ammoMultiplier": 4,
      "shrinkX": 0.2,
      "shrinkY": 0.3,
      
      // 子弹前端颜色：风青色
      "frontColor": "7FEFBD",
      // 子弹尾部颜色：深青色
      "backColor": "5FCF9D",
      // 颜色渐变效果
      "mixColorFrom": "7FEFBD",
      "mixColorTo": "AFFFFF",
      
      // 射击特效（7个部件动画配合的特效）
      "shootEffect": {
        "type": "MultiEffect",
        "effects": [
          // 基础射击特效
          "shootBigColor",
          // 风旋特效
          {
            "type": "WrapEffect",
            "effect": "shootSmallSmoke",
            "color": "7FEFBD"
          },
          // 添加轻微冲击波
          {
            "type": "WrapEffect",
            "effect": "pointShockwave",
            "color": "7FEFBD"
          }
        ]
      },
      
      // 命中特效
      "hitEffect": {
        "type": "MultiEffect",
        "effects": [
          "hitLaserColor",
          {
            "type": "WrapEffect",
            "effect": "hitSquaresColor",
            "color": "7FEFBD"
          }
        ]
      },
      "hitColor": "7FEFBD",
      
      // 弹道特效
      "trailEffect": {
        "type": "MultiEffect",
        "effects": [
          "colorTrail",
          {
            "type": "WrapEffect",
            "effect": "missileTrailSmokeSmall",
            "color": "7FEFBD"
          }
        ]
      },
      "trailColor": "7FEFBD",
      
      // 光照效果
      "lightColor": "7FEFBD",
      "lightRadius": 65,
      "lightOpacity": 0.7,
      
      // 消失特效
      "despawnEffect": {
        "type": "MultiEffect",
        "effects": [
          {
            "type": "WrapEffect",
            "effect": "sparkExplosion",
            "color": "7FEFBD"
          },
          {
            "type": "WrapEffect",
            "effect": "pointShockwave",
            "color": "7FEFBD"
          }
        ]
      },
      
      // 施加状态：轻微减速（风压效果）
      "status": "slow",
      "statusDuration": 60
    },
    
    // 第二弹药类型：使用钛（更高伤害）
    "titanium": {
      "type": "BasicBulletType",
      "reloadMultiplier": 0.9,
      "speed": 8.2,
      "damage": 45,
      "knockback": 1.5,
      "lifetime": 52,
      "width": 12,
      "height": 22,
      "ammoMultiplier": 3,
      "shrinkX": 0.2,
      "shrinkY": 0.3,
      
      "frontColor": "9FFFFF",
      "backColor": "7FDFDF",
      "mixColorFrom": "9FFFFF",
      "mixColorTo": "7FEFBD",
      
      "shootEffect": {
        "type": "MultiEffect",
        "effects": [
          "shootBigColor",
          {
            "type": "WrapEffect",
            "effect": "shootSmallSmoke",
            "color": "9FFFFF"
          },
          {
            "type": "WrapEffect",
            "effect": "pointShockwave",
            "color": "9FFFFF"
          }
        ]
      },
      
      "hitEffect": {
        "type": "MultiEffect",
        "effects": [
          "hitLaserColor",
          {
            "type": "WrapEffect",
            "effect": "hitSquaresColor",
            "color": "9FFFFF"
          }
        ]
      },
      "hitColor": "9FFFFF",
      
      "trailEffect": {
        "type": "MultiEffect",
        "effects": [
          "colorTrail",
          {
            "type": "WrapEffect",
            "effect": "missileTrailSmokeSmall",
            "color": "9FFFFF"
          }
        ]
      },
      "trailColor": "9FFFFF",
      
      "lightColor": "9FFFFF",
      "lightRadius": 70,
      "lightOpacity": 0.75,
      
      "despawnEffect": {
        "type": "MultiEffect",
        "effects": [
          {
            "type": "WrapEffect",
            "effect": "sparkExplosion",
            "color": "9FFFFF"
          },
          {
            "type": "WrapEffect",
            "effect": "pointShockwave",
            "color": "9FFFFF"
          }
        ]
      },
      
      "status": "freezing",
      "statusDuration": 45
    }
  },
  
  // 建造所需材料
  "requirements": [
    {"item": "copper", "amount": 75},
    {"item": "lead", "amount": 60},
    {"item": "titanium", "amount": 45},
    {"item": "silicon", "amount": 50}
  ],
  
  // 建造菜单分类
  "category": "turret",
  // 始终可见
  "buildVisibility": "shown",
  
  // 研究树配置
  "research": {
    "parent": "scorch",
    "requirements": [
      {"item": "copper", "amount": 300},
      {"item": "lead", "amount": 250},
      {"item": "titanium", "amount": 200}
    ]
  }
}