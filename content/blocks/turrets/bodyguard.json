    ]
  },
  
  // 消耗品配置
  "consumes": {
    // 冷却剂配置
    "coolant": {
      // 每次使用0.3单位冷却剂
      "amount": 0.3,
      // 冷却剂为可选消耗品（可不使用）
      "optional": true
    }
  },
  
  // 射击配置（修改为双管交替射击，参考glow配置）
  "shoot": {
    // 使用交替射击模式（双管轮流射击）
    "type": "ShootAlternate",
    // 每次射击发射子弹数（双管各发射1发）
    "shots": 10,
    // 双管射击间隔（帧），比glow的1帧稍慢，但比单管快
    "shotDelay": 2,
    // 双管散布角度（度），形成小范围覆盖
    "spread": 7
  },
  
  // 弹药类型配置
  "ammoTypes": {
    // 使用单晶硅作为弹药
    "msilicon": {
      // 弹药类型：基础子弹
      "type": "BasicBulletType",
      // 子弹飞行速度（格/帧）
      "speed": 10,
      // 子弹伤害（每发）
      "damage": 17,
      // 子弹碰撞箱宽度
      "bulletWidth": 12,
      // 子弹碰撞箱高度
      "bulletHeight": 20,
      // 子弹飞行中收缩比例
      "bulletShrink": 0.3,
      // 子弹存在时间（帧）
      "lifetime": 60,
      // 单次装填获得的弹药量乘数
      "ammoMultiplier": 2,
      // 子弹可穿透单位
      "pierce": true,
      // 最大穿透数量
      "pierceCap": 3,
      
      // 射击特效配置
      "shootEffect": {
        // 多重效果组合
        "type": "MultiEffect",
        "effects": [
          // 基础射击特效（带颜色）
          "shootBigColor",
          // 包裹特效：小型烟雾，使用自定义颜色
          {
            "type": "WrapEffect",
            "effect": "shootSmallSmoke",
            "color": "FFAA55"
          }
        ]
      },
      
      // 子弹前端颜色（橙黄色）
      "frontColor": "FFAA55",
      // 子弹尾部颜色（稍深的橙黄色）
      "backColor": "FF8833",
      // 子弹颜色渐变起始色
      "mixColorFrom": "FFAA55",
      // 子弹颜色渐变结束色（亮黄色）
      "mixColorTo": "FFFF88",
      
      // 命中特效配置
      "hitEffect": {
        "type": "MultiEffect",
        "effects": [
          // 基础激光命中特效
          "hitLaserColor",
          // 包裹特效：彩色方块爆炸
          {
            "type": "WrapEffect",
            "effect": "hitSquaresColor",
            "color": "FFAA55"
          }
        ]
      },
      
      // 弹道特效配置
      "trailEffect": {
        "type": "MultiEffect",
        "effects": [
          // 基础彩色拖尾
          "colorTrail",
          // 包裹特效：小型导弹尾烟
          {
            "type": "WrapEffect",
            "effect": "missileTrailSmokeSmall",
            "color": "FFAA55"
          }
        ]
      },
      
      // 子弹消失特效配置
      "despawnEffect": {
        "type": "MultiEffect",
        "effects": [
          // 火花爆炸特效
          "sparkExplosion",
          // 包裹特效：点冲击波
          {
            "type": "WrapEffect",
            "effect": "pointShockwave",
            "color": "FFAA55"
          }
        ]
      },
      
      // 施加的状态效果：燃烧
      "status": "burning",
      // 状态持续时间（帧）
      "statusDuration": 120,
      // 子弹光照颜色
      "lightColor": "FFAA55",
      // 光照半径
      "lightRadius": 80,
      // 光照透明度
      "lightOpacity": 0.7,
      // 命中音效
      "hitSound": "explosion"
    }
  },
  
  // 建造所需材料
  "requirements": [
    {"item": "silicon", "amount": 150},      // 硅 × 150
    {"item": "titanium", "amount": 100},     // 钛 × 100
    {"item": "thorium", "amount": 70},       // 钍 × 70
    {"item": "phase-fabric", "amount": 25},  // 相位织物 × 25
    {"item": "plastanium", "amount": 40}     // 塑钢 × 40
  ],
  
  // 在建造菜单中的分类
  "category": "turret",
  // 研究树配置
  "research": {
    // 前置研究项目
    "parent": "glow",
    // 解锁目标（需要先研究）
    "objectives": [
      "Afterimage",
    ]
  }
}