	"name": "exchangeo",
	// 每次生产输出：3个钛
	"outputItem": "msilicon/3",
	// 物品容量：30个
	"itemCapacity": 30,
	// 尺寸改为2x2
	"size": 2,
	// 需要电力
	"hasPower": true,
	// 不处理液体
	"hasLiquids": false,
	// 处理物品
	"hasItems": true,
	// 合成时间：30刻（1.5秒）
	"craftTime": 30,
	// 合成时的持续视觉效果：无
	"updateEffect": "none",
	// 合成完成时的视觉效果：冶炼烟雾
